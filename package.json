{
  "name": "middle.messenger.praktikum.yandex",
  "version": "1.0.0",
  "scripts": {
    "start": "npm run build  && node ./server.js",
    "dev": "vite --open",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "npx eslint --ext .js,.ts,.tsx,.jsx src && npx stylelint \"**/*.scss\" && npx tsc --noEmit",
    "lint:fix": "npx eslint --ext .js,.ts,.tsx,.jsx src --fix && npx stylelint \"**/*.scss\" --fix",
    "prepare": "husky install",
    "test": "mocha --require ts-node/register --require ./mochaSetup.cjs './src/**/*.test.ts'"
  },
  "devDependencies": {
    "@types/chai": "4.3.3",
    "@types/jsdom": "20.0.0",
    "@types/mocha": "10.0.0",
    "@types/sinon": "10.0.13",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "chai": "4.3.6",
    "eslint": "^8.50.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jsdom": "20.0.1",
    "mocha": "10.0.0",
    "prettier": "^3.0.3",
    "sass": "^1.68.0",
    "sinon": "14.0.1",
    "stylelint": "^15.10.3",
    "stylelint-config-standard-scss": "^10.0.0",
    "stylelint-scss": "^5.2.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vite-plugin-handlebars": "^1.6.0"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "handlebars": "^4.7.8",
    "husky": "^8.0.0",
    "moment": "^2.29.4",
    "sass": "^1.68.0",
    "uuid": "^9.0.1"
  },
  "engines": {
    "node": ">=12.0.0"
  }
}
